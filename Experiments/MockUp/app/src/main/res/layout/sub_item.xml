<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        >


        <ImageView
            android:id="@+id/image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/netflix"
            android:contentDescription="Subscription Logo"
            android:padding="10dp"
            />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="2.5dp"
            android:layout_toEndOf="@+id/image"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/colorAccent"
            android:text="Netflix"
            />
        <TextView
            android:id="@+id/tv_cost"
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:layout_toEndOf="@+id/tv_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/colorAccent"
            android:text="$7.99"
            />
        <ImageView
            android:id="@+id/image_change"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/cost_equal"
            android:layout_toEndOf="@+id/tv_title"
            android:layout_below="@+id/tv_cost"
            android:contentDescription="ChangeImage"
            />
        <TextView
            android:id="@+id/tv_change"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_toEndOf="@+id/image_change"
            android:layout_below="@+id/tv_cost"
            android:textColor="@color/colorAccent"
            android:textAlignment="center"
            android:text="0.00"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c0c0c0"
        android:padding="5dp" />

</LinearLayout>